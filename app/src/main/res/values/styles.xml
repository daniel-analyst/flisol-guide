<resources>

    <style name="Theme.Flisol" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_flisol</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Flisol</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Flisol</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Flisol</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Flisol</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Flisol</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_flisol</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_flisol</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Flisol</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">#212121</item>

        <item name="android:textAppearanceLargePopupMenu">@android:color/holo_red_dark</item>
        <item name="android:textAppearanceSmallPopupMenu">@android:color/holo_red_dark</item>
        <item name="android:textAppearanceMedium">@android:color/holo_red_dark</item>
    </style>

    <style name="ActionBar.Solid.Flisol" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_flisol</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_flisol</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_flisol</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Flisol</item>
    </style>

    <style name="ActionBar.Transparent.Flisol" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_flisol</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Flisol</item>
    </style>

    <style name="PopupMenu.Flisol" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flisol</item>
    </style>

    <style name="DropDownListView.Flisol" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_flisol</item>
    </style>

    <style name="ActionBarTabStyle.Flisol" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_flisol</item>
    </style>

    <style name="DropDownNav.Flisol" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_flisol</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flisol</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_flisol</item>
    </style>

    <style name="ProgressBar.Flisol" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_flisol</item>
    </style>

    <style name="ActionButton.CloseMode.Flisol" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_flisol</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Flisol.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Flisol</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Flisol</item>
    </style>

    <style name="title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="dashboardButton">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/custom_buttons</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.00</item>
    </style>

    <style name="facebookButton">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#496DA8</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.00</item>
    </style>

    <style name="twitterButton">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#32DEF4</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.00</item>
    </style>

    <style name="googlePlusButton">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#D64136</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.00</item>
    </style>

    <style name="softwareLivreButton">
        <item name="android:textSize">20dp</item>
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#99CD4E</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.00</item>
    </style>

    <style name="DefaultButton">
        <item name="android:typeface">sans</item>
        <item name="android:padding">5sp</item>
        <item name="android:layout_margin">4sp</item>
        <item name="android:background">@drawable/custom_buttons</item>
    </style>

    <style name="DefaultText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
    </style>

</resources>
