<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="br.trindade.flisol.ui.InstallFestActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/freeSoftwareImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/freesoftware" />

        <TextView
            android:id="@+id/installFestText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/freeSoftwareImage"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="@string/installFestText" />

        <Button
            android:id="@+id/softwaresBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/software_list"
            android:layout_below="@+id/installFestText"
            android:layout_centerHorizontal="true"
            style="@style/DefaultButton" />

    </RelativeLayout>

</ScrollView>