<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.trindade.flisol.ui.LectureListActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/lecturer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="10dp"
        android:text="@string/by"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/lecturer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/lecturer_label"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/room_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lecturer_label"
        android:layout_marginLeft="10dp"
        android:text="@string/local"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lecturer_label"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/room_label"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/schedule_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/room_label"
        android:layout_marginLeft="10dp"
        android:text="@string/schedule"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/schedule_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/room_label"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/schedule_label"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/interval_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/room_label"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/schedule_begin"
        android:text="@string/interval"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/schedule_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/room_label"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/interval_label"
        android:textSize="15sp" />

</RelativeLayout>



